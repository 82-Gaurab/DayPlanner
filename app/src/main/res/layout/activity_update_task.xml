<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.activity.UpdateTaskActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updateTaskTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updateTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update task title"
            android:background="@color/gray"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/updateTDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updateTaskDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update task Detail"
            android:background="@color/gray"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TimePicker
        android:id="@+id/updateTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:timePickerMode="spinner"
        android:background="@color/gray"/>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="200dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Update Task" />


</LinearLayout>